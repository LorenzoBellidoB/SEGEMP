@{
    ViewData["Title"] = "Home Page";
}

@model Mandaloriano.ViewModels.ListadoPersonaVM

<style>
    body {
        font-family: 'Star Jedi', Arial, sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
        background-image: url('https://th.bing.com/th/id/R.7549a64a712df3a2a824804e4d74f9ed?rik=bVIrNv0Ln8HJRw&riu=http%3a%2f%2fgetwallpapers.com%2fwallpaper%2ffull%2f2%2fb%2f4%2f1295754-widescreen-mandalorian-symbol-wallpaper-2000x1200-for-mac.jpg&ehk=RKJVp4Aimz2zrsaHS7IkrWa5nray5NUFLYrL7V7WmOA%3d&risl=&pid=ImgRaw&r=0');
        background-size: cover;
        background-attachment: fixed;
    }
    .container {
        width: 80%;
        margin: auto;
        overflow: hidden;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 10px;
    }
    h1, h2, h4 {
        color: #feda4a;
        text-shadow: 2px 2px 8px #000;
    }
    form {
        margin: 20px 0;
    }
    select, input[type="submit"] {
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #333;
        color: #feda4a;
    }
    .mission-details {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
</style>

<div class="container">
    @if (ViewBag.Error != null)
    {
        <h1>@ViewBag.Error</h1>
    }
    else
    {
        <div>
            <form method="post">
                <select name="id" id="id">
                    @foreach (var mision in Model.Listado)
                    {
                        <option value="@mision.IdMision">@mision.Titulo</option>
                    }
                </select>
                <input type="submit" value="Seleccionar" />
            </form>
       
        </div>
        @if (Model.MisionSelected != null)  
        {
            <div class="mission-details">
                <h2>@Model.MisionSelected.Titulo</h2>
                <h4>@Model.MisionSelected.Descripcion</h4>
                <h4>@Model.MisionSelected.Recompensa</h4>
            </div>
        }
    }
</div>
