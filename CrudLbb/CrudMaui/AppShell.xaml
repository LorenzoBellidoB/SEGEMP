<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrudMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrudMaui"
    xmlns:views="clr-namespace:CrudMaui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CrudMaui">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Personas"
              ContentTemplate="{DataTemplate views:Personas}" />
        <ShellContent Title="Departamentos"
              ContentTemplate="{DataTemplate views:Departamentos}" />
    </FlyoutItem>
    <ShellContent Title="Editar" ContentTemplate="{DataTemplate views:EditarPersona}" Route="EditarPersona"></ShellContent>
    <ShellContent Title="Info"
                  ContentTemplate="{DataTemplate views:Info}">
    </ShellContent>

</Shell>
