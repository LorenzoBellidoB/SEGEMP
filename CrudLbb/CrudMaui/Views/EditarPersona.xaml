<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudMaui.Views.EditarPersona"
             Title="EditarPersona">
    <VerticalStackLayout>
        <Label 
            Text="Editar Persona"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Nombre"></Entry>
        <Entry Placeholder="Apellidos"></Entry>
        <Entry Placeholder="Telefono"></Entry>
        <Entry Placeholder="Direccion"></Entry>
        <Entry Placeholder="Foto"></Entry>
        <Entry Placeholder="FechaNacimiento"></Entry>
        <Entry Placeholder="IdDepartamento"></Entry>
        <Button Text="Guardar"></Button>
    </VerticalStackLayout>
</ContentPage>